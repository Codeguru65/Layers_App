<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingTop="130dp">

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".DailyActivityViewer">

            <androidx.cardview.widget.CardView
                android:id="@+id/cvFeedInfo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="10dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:layout_margin="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView

                        android:id="@+id/tv5kgBags"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="total 5gk bags used"
                        android:textSize="16sp"
                        android:padding="3dp"/>

                    <TextView
                        android:textSize="16sp"
                        android:padding="3dp"
                        android:id="@+id/tv20kgBags"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="total 20gk bags used" />

                    <TextView

                        android:id="@+id/tv50kgBags"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="total 5gk bags used"
                        android:textSize="16sp"
                        android:padding="3dp"/>

                    <TextView
                        android:id="@+id/tvKgTotal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="total 5gk bags used"
                        android:textSize="16sp"
                        android:padding="3dp"/>

                </LinearLayout>



            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/cvDaiyEggsInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/cvFeedInfo"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:layout_margin="12dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvTotalEggsPicked"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="total 5gk bags used"
                        android:textSize="16sp"
                        android:padding="3dp"/>

                    <TextView
                        android:id="@+id/tvTotalEggsBroken"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="total 5gk bags used"
                        android:textSize="16sp"
                        android:padding="3dp"/>

                    <TextView
                        android:id="@+id/tvTotalSmallEggs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="total 5gk bags used"
                        android:textSize="16sp"
                        android:padding="3dp"/>

                    <TextView
                        android:id="@+id/tvTotalMediumEggs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="total 5gk bags used"
                        android:textSize="16sp"
                        android:padding="3dp"/>

                    <TextView
                        android:id="@+id/tvTotalLarge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="total 5gk bags used"
                        android:textSize="16sp"
                        android:padding="3dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvWaterInfo"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                app:layout_constraintTop_toBottomOf="@+id/cvDaiyEggsInfo"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:layout_margin="12dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvTotalWater"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="total water"
                        android:textSize="16sp"
                        android:padding="3dp"/>



                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvMortalityInfo"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                app:layout_constraintTop_toBottomOf="@+id/cvWaterInfo"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:layout_margin="12dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvTotalDeaths"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="total water"
                        android:textSize="16sp"
                        android:padding="3dp"/>



                </LinearLayout>

            </androidx.cardview.widget.CardView>




        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</LinearLayout>
