<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bglogin"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    tools:context=".Mort">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtm2"
                android:layout_width="207dp"
                android:layout_height="37dp"
                android:layout_marginTop="56dp"
                android:text="MORTALITY"
                android:textAlignment="center"
                android:textColor="#008000"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtm13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="65dp"
                android:text="Number"
                android:textColor="#008000"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtm2" />

            <EditText
                android:id="@+id/etxtm6"
                android:layout_width="135dp"
                android:layout_height="48dp"
                android:layout_marginStart="88dp"
                android:layout_marginLeft="88dp"
                android:layout_marginTop="50dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="@string/open"
                android:textColor="@android:color/black"
                android:textColorHighlight="#008000"
                android:textColorHint="#008000"
                android:textColorLink="#008000"
                app:layout_constraintStart_toEndOf="@+id/txtm13"
                app:layout_constraintTop_toBottomOf="@+id/txtm2" />

            <TextView
                android:id="@+id/txtm17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="65dp"
                android:text="Cause"
                android:textColor="#008000"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtm13" />

            <TextView
                android:id="@+id/txtm19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="42dp"
                android:layout_marginLeft="42dp"
                android:layout_marginTop="65dp"
                android:text="Other"
                android:textColor="#008000"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtm17" />

            <Spinner
                android:id="@+id/spinnerm3"
                android:layout_width="141dp"
                android:layout_height="40dp"
                android:layout_marginTop="54dp"
                android:entries="@array/mort"
                app:layout_constraintStart_toStartOf="@+id/etxtm6"
                app:layout_constraintTop_toBottomOf="@+id/etxtm6" />

            <Button
                android:id="@+id/btn_mort"
                android:layout_width="177dp"
                android:layout_height="48dp"
                android:layout_marginTop="65dp"
                android:layout_marginBottom="35dp"
                android:background="@drawable/custom_button"
                android:text="NEXT"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.501"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtm19" />

            <EditText
                android:id="@+id/editText"
                android:layout_width="137dp"
                android:layout_height="57dp"
                android:layout_marginTop="30dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="@android:color/black"
                app:layout_constraintStart_toStartOf="@+id/spinnerm3"
                app:layout_constraintTop_toBottomOf="@+id/spinnerm3" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</LinearLayout>